<!DOCTYPE html>
<html>
  <head>
    <title>Myapp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <!-- header -->
    <header>
      <div class="container">
        <div class="header-left">
          <h2 class="logo">Sharage<span class="far fa-folder-open login-icon"></span></h2>
        </div>
        <div class="header-right">
          <div class="login" id="login-show"><span class="fas fa-user login-user"></span>Log In</div>
        </div>
      </div>
    </header>

    <!-- signup modal -->
    <div class="singup-modal-wrapper" id="signup-modal">
      <div class="modal">
        <div class="close-modal">
          <i class="fa fa-2x fa-times"></i>
        </div>
        <div id="signup-form">
          <h2>Sign Up</h2>
          <form action="#">
            <input class="form-control" type="text" placeholder="E-mail">
            <input class="form-control" type="password" placeholder="Password">
            <div id="submit-btn">Sign Up</div>
          </form>
        </div>
      </div>
    </div>
    
    <!-- login modal -->
    <div class="login-modal-wrapper" id="login-modal">
      <div class="modal">
        <div class="close-modal">
          <i class="fa fa-2x fa-times"></i>
        </div>
        <div id="login-form">
          <h2>Log In</h2>
          <form action="#">
            <input class="form-control" type="text" placeholder="E-mail">
            <input class="form-control" type="password" placeholder="Password">
            <div id="submit-btn">Log In</div>
          </form>
        </div>
      </div>
    </div>

    <%= yield %>

  </body>
</html>
